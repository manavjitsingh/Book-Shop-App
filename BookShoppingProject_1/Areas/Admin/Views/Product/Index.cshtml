<div class="row">
    <div class="col-9">
        <h2 class="text-primary">Product List</h2>
    </div>
    <div class="col-3">
        <a asp-action="Upsert" class="btn btn-warning">
            <i class="fas fa-plus"></i> &nbsp; New Product
        </a>
    </div>
</div>
<div class="border-5 p-2 m-2">
    <table id="tblData" class="table table-bordered table-striped table-hover table-active">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Author</th>
                <th>ISBN</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
    </table>
</div>
@section Scripts
{
    <script src="~/js/product.js"></script>
}